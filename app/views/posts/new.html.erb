<h1>Add Post</h1>
<hr>

<%= form_for :post, url: posts_path,  html: { multipart: true }  do |f| %>
<br>


    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
          <div class="alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
  <p>
   <%= f.label :title %><br>
   <%=f.text_field(:title, {:class => "form-control"}) %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area(:body, {:clas => "form-control"}) %>
    <br>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit({:class => 'btn btn-primary'}) %>
  </p>
<% end %>